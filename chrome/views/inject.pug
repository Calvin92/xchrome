doctype html

html
  head
    meta(charset='UTF-8')
    title Redux TodoMVC Example (Inject)
    style.
      html, body {
        background-color: rgba(0,0,0,0)
      }
  body
    #root
    if env !== 'prod'
      script(src= env == 'prod' ? '/js/inject.bundle.js' : 'http://localhost:3000/js/inject.bundle.js')
    script(src= env == 'prod' ? '/js/app.bundle.js' : 'http://localhost:3000/js/app.bundle.js')
